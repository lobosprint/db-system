# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.LoginController.login
# An example controller showing a sample home page
#GET     /app-backend                controllers.LoginController.login
# An example controller showing a sample home page
#GET     /app-backend/login          controllers.LoginController.login
# An example controller showing how to use dependency injection
GET     /app-backend/getStudents    controllers.StudentController.getAllStudents
GET     /app-backend/getStudent     controllers.StudentController.getStudent
GET     /app-backend/getTurns       controllers.TurnController.getAllTurns
GET     /app-backend/getTurn        controllers.TurnController.getTurn

GET     /getStudents                controllers.StudentController.getAllStudents
GET     /getStudent                 controllers.StudentController.getStudent
GET     /getTurns                   controllers.TurnController.getAllTurns
GET     /getTurn                    controllers.TurnController.getTurn

POST     /app-backend/login         controllers.LoginController.login

POST     /addStudent                controllers.StudentController.addStudent

POST     /addTurn                   controllers.TurnController.addTurn

POST    /addPenalty                 controllers.PenaltyController.addPenalty



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


